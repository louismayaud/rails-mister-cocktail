<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </li>

  <% end %>
</ul>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Add a cocktail', new_cocktail_path %>
<%= link_to 'List all cocktails', cocktails_path %>
